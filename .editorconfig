# EditorConfig documentation:
# https://EditorConfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[{*.{c,h,cpp,hpp,cxx,hxx,launch}, CMakeLists.txt, package.xml}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 80

