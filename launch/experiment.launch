<launch>
  <!-- Set the ROS log level in rosconsole.conf -->
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find supereight_ros)/config/rosconsole.conf"/>

  <remap to="/D455/depth0/image"             from="/camera/depth_image"/>
  <remap to="/D455/rgb0/image"               from="/camera/rgb_image"/>
  <remap to="/vicon/s550_jetson/s550_jetson" from="/pose"/>
  <!-- For handheld tests with the standalone camera -->
  <!--<remap to="/vicon/d455_ros/d455_ros"       from="/pose"/>-->

  <include file="$(find vicon_bridge)/launch/vicon.launch"></include>
  <include file="$(find supereight_ros)/launch/realsense_D455.launch"></include>

  <!-- supereight-ros node -->
  <node pkg="supereight_ros"
        name="semanticeight"
        type="supereight_ros"
        clear_params="true"
        output="screen"
        required="true"
        launch-prefix="">
    <rosparam command="load" file="$(find supereight_ros)/config/experiment.yaml"/>
    <!-- For handheld tests with the standalone camera -->
    <!--<rosparam command="load" file="$(find supereight_ros)/config/experiment_handheld.yaml"/>-->
  </node>

  <!-- rviz with appropriate config -->
  <node pkg="rviz" name="rviz" type="rviz" args="-d $(find supereight_ros)/config/experiment.rviz" launch-prefix="bash -c 'sleep 2; $0 $@'"/>
</launch>

