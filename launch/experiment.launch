<launch>
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find supereight_ros)/config/rosconsole.conf"/>

  <remap to="/D455/depth0/image"             from="/camera/depth_image"/>
  <remap to="/D455/rgb0/image"               from="/camera/rgb_image"/>
  <remap to="/vicon/s550_jetson/s550_jetson" from="/pose"/>

  <include file="$(find supereight_ros)/launch/realsense_D455.launch"></include>

  <node pkg="supereight_ros"
        name="semanticeight"
        type="supereight_ros"
        clear_params="true"
        output="screen"
        required="true"
        launch-prefix="">
    <rosparam command="load" file="$(find supereight_ros)/config/experiment.yaml"/>
  </node>
</launch>

