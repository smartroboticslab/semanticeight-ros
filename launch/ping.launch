<launch>
  <!-- The IP address to ping. Defaults to the Vicon computer. -->
  <arg name="ip" default="192.168.1.164"/>

  <node pkg="rosping"
        type="rosping"
        name="ping"
        args="$(arg ip)"/>
</launch>
