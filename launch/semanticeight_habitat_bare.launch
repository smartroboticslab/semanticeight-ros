<launch>

  <arg name="waypoint_x" default="-1.79269588"/>
  <arg name="waypoint_y" default="-19.25524521"/>
  <arg name="waypoint_z" default="0.11083889"/>
  
  <!-- Initial Waypoint sent to the controller -->
  <param name="wp_x" type="double" value="$(arg waypoint_x)"/>
  <param name="wp_y" type="double" value="$(arg waypoint_y)"/>
  <param name="wp_z" type="double" value="$(arg waypoint_z)"/>
  
  <!-- Set the ROS log level in rosconsole.conf -->
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find supereight_ros)/config/rosconsole.conf"/>

  <!-- habitat-ros node -->
  <!-- TODO Change the remapping below, supereight publishes a path but habitat-ros receives a single pose -->
  <remap from="/supereight/path" to="/autopilot/trajectory"/>
  
  <include file="$(find habitat_ros)/launch/habitat.launch">
    <arg name="habitat_config"         value="$(find supereight_ros)/config/semanticeight_habitat.yaml"/>
  </include>

  <!-- supereight-ros node -->
  <node pkg="supereight_ros"
        name="semanticeight"
        type="supereight_ros"
        clear_params="true"
        output="screen"
        required="true"
        launch-prefix="">
    <!-- Include rosparam yaml files -->
    <rosparam command="load" file="$(find supereight_ros)/config/semanticeight_habitat.yaml"/>
    <!-- Remap topic names -->
    <remap from="/camera/depth_image" to="/habitat/depth/image_raw"/>
    <remap from="/camera/rgb_image"   to="/habitat/rgb/image_raw"/>
    <remap from="/pose"               to="/habitat/pose"/>
    <remap from="/camera/class"       to="/habitat/semantic_class/image_raw"/>
    <remap from="/camera/instance"    to="/habitat/semantic_instance/image_raw"/>
  </node>

  <!-- Start the controller -->
  <include file="$(find mpc)/launch/firefly_habitat.launch"/>

  <!-- rviz with appropriate config -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find supereight_ros)/config/semanticeight.rviz" />
</launch>

