<launch>
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find supereight_ros)/config/rosconsole.conf"/>

  <remap to="/D455/depth0/image"       from="/camera/depth_image"/>
  <remap to="/D455/rgb0/image"         from="/camera/rgb_image"/>
  <remap to="/vicon/d455_ros/d455_ros" from="/pose"/>

  <include file="$(find supereight_ros)/launch/vicon.launch"></include>
  <include file="$(find supereight_ros)/launch/realsense_D455.launch"></include>

  <node pkg="supereight_ros"
        name="semanticeight"
        type="supereight_ros"
        clear_params="true"
        output="screen"
        required="true"
        launch-prefix="">
    <rosparam command="load" file="$(find supereight_ros)/config/experiment.yaml"/>
    <rosparam command="load" file="$(find supereight_ros)/config/experiment_handheld_pc.yaml"/>
  </node>

  <include file="$(find supereight_ros)/launch/rviz.launch">
    <arg name="config" value="$(find supereight_ros)/config/experiment_handheld_pc.rviz"/>
  </include>
</launch>

