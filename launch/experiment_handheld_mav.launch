<launch>
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find supereight_ros)/config/rosconsole.conf"/>

  <include file="$(find supereight_ros)/launch/experiment_throttle.launch"/>
  <include file="$(find supereight_ros)/launch/realsense_D455.launch"/>
  <include file="$(find vicon_bridge)/launch/vicon.launch">
    <arg name="datastream_hostport" value="192.168.1.164:801"/>
  </include>
  <include file="$(find supereight_ros)/launch/ping.launch"></include>

  <node pkg="supereight_ros"
        type="supereight_ros"
        name="semanticeight"
        output="screen"
        required="true"
        launch-prefix="">
    <rosparam command="load" file="$(find supereight_ros)/config/experiment.yaml"/>
    <rosparam command="load" file="$(find supereight_ros)/config/experiment_handheld_mav.yaml"/>
    <remap from="/camera/depth_image" to="/D455/depth0/image"/>
    <remap from="/camera/rgb_image"   to="/D455/rgb0/image"/>
    <remap from="/pose"               to="/vicon/s550_jetson/s550_jetson"/>
  </node>
</launch>
