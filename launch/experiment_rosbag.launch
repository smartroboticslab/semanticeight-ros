<launch>
  <!-- Set the ROS log level in rosconsole.conf -->
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find supereight_ros)/config/rosconsole.conf"/>

  <remap to="/camera/aligned_depth_to_color/image_raw" from="/camera/depth_image"/>
  <remap to="/camera/color/image_raw"                  from="/camera/rgb_image"/>
  <remap to="/vicon/s550_jetson/s550_jetson"           from="/pose"/>

  <!-- supereight-ros node -->
  <node pkg="supereight_ros"
        name="semanticeight"
        type="supereight_ros"
        clear_params="true"
        output="screen"
        required="true"
        launch-prefix="">
    <!-- Include rosparam yaml files -->
    <rosparam command="load" file="$(find supereight_ros)/config/experiment.yaml"/>
    <rosparam command="load" file="$(find supereight_ros)/config/experiment_rosbag.yaml"/>
    <!-- Remap topic names -->
  </node>

  <!-- rviz with appropriate config -->
  <node pkg="rviz" name="rviz" type="rviz" args="-d $(find supereight_ros)/config/simulation.rviz" launch-prefix="bash -c 'sleep 2; $0 $@'"/>
</launch>

